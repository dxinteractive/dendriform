{
  "private": true,
  "scripts": {
    "test": "yarn lerna run test",
    "lint": "yarn lerna run lint",
    "build": "yarn lerna run build",
    "size": "yarn lerna run size",
    "build-docs": "cp README.md packages/dendriform/README.md && yarn lerna run build-docs",
    "prep": "yarn && yarn lerna bootstrap",
    "bump": "yarn lerna publish -m \"build: publish\"",
    "reinstall": "rm -rf node_modules && rm -rf packages/*/node_modules && yarn prep"
  },
  "dependencies": {
    "lerna": "^3.10.7"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/tsdx",
      "**/tsdx/**",
      "**/docusaurus",
      "**/docusaurus/**"
    ]
  }
}
